<% layout('layouts/boilerplate') %>
    <!-- layout is being use for the ejs-mate property, layout refers to the body in boilerplate -->
    <div class="row">
        <h1 class="text-center">Edit <%= foundCamp.title %>
        </h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= foundCamp._id %>?_method=put" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data"> <!-- here novalidate is telling
                browser to not to validate because we are doing the validation with the Bootstrap (class is
                validated-form in boilerplate) -->
                <div class="mb-3">
                    <label class="form-label" for="title">Title :</label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        value="<%= foundCamp.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location :</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value=" <%= foundCamp.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price :</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input class="form-control" type="text" name="campground[price]" id="price"
                            value=" <%= foundCamp.price %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description :</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        required> <%= foundCamp.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Upload Images :</label>
                    <input type="file" class="form-control" type="text" name="image" multiple id="image">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-">
                    <% foundCamp.images.forEach(function(img, i) { %>
                        <img src="<%=img.thumb %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" id="image-<%=i%>" value="<%=img.filename %>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>

            </form>
            <a href="/campgrounds">All Campground</a>
        </div>
    </div>